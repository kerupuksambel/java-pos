<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pos.BarangController">
    <padding>
        <Insets bottom="25" left="15" right="15" top="25" />
    </padding>
    <Label text="Nama Barang :" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
    <TextField fx:id="textNamaBarang" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Label text="Harga Barang :" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2" />
    <TextField fx:id="textHargaBarang" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Button fx:id="btnTambahBarang" prefHeight="25.0" prefWidth="150.0" text="Tambah Barang" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <Button fx:id="btnUbahBarang" prefHeight="25.0" prefWidth="150.0" text="Ubah Barang" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <Button fx:id="btnHapusBarang" prefHeight="25.0" prefWidth="150.0" text="Hapus Barang" GridPane.columnIndex="0" GridPane.rowIndex="8" />

    <TableView fx:id="tbBarang" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.rowSpan="10">
        <columns>
            <TableColumn fx:id="tbBarangID" prefWidth="35" text="ID"></TableColumn>
            <TableColumn fx:id="tbBarangNama" prefWidth="185" text="Nama"></TableColumn>
            <TableColumn fx:id="tbBarangHarga" prefWidth="100" text="Harga"></TableColumn>
        </columns>
    </TableView>
</GridPane>
